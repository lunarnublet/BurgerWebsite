doctype html
html
    head
        link(href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:200,300,400,600|Roboto+Slab" rel="stylesheet")
        link(href="/css/burgers.css" rel="stylesheet")
        title #{title}
    body
        div(id='page-wrapper')
            header(class='main-nav')
                h1(class='brand') Express Burger
                nav(class='nav-flex') 
                    ul(class='nav-list')
                        each item in config.nav
                            li(class='nav-item')
                                a(href=item[1]) #{item[0]}
            div(id="content")
                block content
        footer
            h6 Express Burger &copy2017
        block script
